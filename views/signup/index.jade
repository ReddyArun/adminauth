extends ../layout

block content
  div.row
    div.col-sm-6
      div.page-header
        h1 Sign Up
      div#signup
    form(method='post')
      div.form-group
        label Pick a Username:
        input.form-control(type='text', name='username')
      div.form-group
        label Create a Password:
        input.form-control(type='password', name='password')
      div.form-group
        button.btn.btn-primary.btn-signup(type='submit') Create My Account
